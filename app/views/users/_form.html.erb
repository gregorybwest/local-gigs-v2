<%= form_with(model: user, class: "contents") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul class="list-disc ml-6">
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:email].none?, "border-red-400 focus:outline-red-600": user.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :password %>
    <%= form.text_field :password, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:password].none?, "border-red-400 focus:outline-red-600": user.errors[:password].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_name %>
    <%= form.text_field :user_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:user_name].none?, "border-red-400 focus:outline-red-600": user.errors[:user_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:image_url].none?, "border-red-400 focus:outline-red-600": user.errors[:image_url].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_artist %>
    <%= form.checkbox :is_artist, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": user.errors[:is_artist].none?, "border-red-400 focus:outline-red-600": user.errors[:is_artist].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :spotify_link %>
    <%= form.text_field :spotify_link, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:spotify_link].none?, "border-red-400 focus:outline-red-600": user.errors[:spotify_link].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :preferred_location %>
    <%= form.text_field :preferred_location, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:preferred_location].none?, "border-red-400 focus:outline-red-600": user.errors[:preferred_location].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :bio %>
    <%= form.textarea :bio, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user.errors[:bio].none?, "border-red-400 focus:outline-red-600": user.errors[:bio].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
