<div id="<%= dom_id user %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Email:</strong>
    <%= user.email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Password:</strong>
    <%= user.password %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User name:</strong>
    <%= user.user_name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Image url:</strong>
    <%= user.image_url %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Is artist:</strong>
    <%= user.is_artist? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Spotify link:</strong>
    <%= user.spotify_link %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Preferred location:</strong>
    <%= user.preferred_location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Bio:</strong>
    <%= user.bio %>
  </div>
</div>
