<% content_for :title, "Events" %>

<% content_for :head do %>
  <link href="https://api.mapbox.com/mapbox-gl-js/v3.18.0/mapbox-gl.css" rel="stylesheet">
  <script src="https://api.mapbox.com/mapbox-gl-js/v3.18.0/mapbox-gl.js"></script>
<% end %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to "New event", new_event_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <!-- Mapbox Map -->
  <div id="map" class="w-full rounded-lg shadow-lg mb-8" style="height: 400px;"></div>

  <div id="events" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @events.any? %>
      <% @events.each do |event| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render event %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", event, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_event_path(event), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", event, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No events found.</p>
    <% end %>
  </div>
</div>

<%= content_tag :div, id: "events-data", data: {
  events: @events.select { |e| e.venue&.longitude && e.venue&.latitude }.map { |e|
    {
      id: e.id,
      name: e.name,
      venue_name: e.venue.name,
      show_time: e.formatted_show_time,
      latitude: e.venue.latitude,
      longitude: e.venue.longitude,
      url: event_path(e)
    }
  }.to_json
} do %>
<% end %>

<script>
  document.addEventListener('turbo:load', () => {
    if (typeof mapboxgl === 'undefined') {
      console.error('Mapbox GL JS not loaded');
      return;
    }

    const mapContainer = document.getElementById('map');
    if (!mapContainer) return;

    if (mapContainer._mapboxMap) {
      mapContainer._mapboxMap.remove();
    }

    mapboxgl.accessToken = '<%= Rails.application.credentials.mapbox[:access_token] %>';

    const eventsDataEl = document.getElementById('events-data');
    const events = eventsDataEl ? JSON.parse(eventsDataEl.dataset.events || '[]') : [];

    const defaultCenter = [30, 15];
    const defaultZoom = 1;

    const map = new mapboxgl.Map({
      container: 'map',
      style: 'mapbox://styles/mapbox/standard',
      projection: 'globe',
      zoom: defaultZoom,
      center: defaultCenter
    });

    mapContainer._mapboxMap = map;

    map.addControl(new mapboxgl.NavigationControl());
    map.scrollZoom.disable();

    map.on('style.load', () => {
      map.setFog({});
    });

    // Add event markers to the map
    function addEventMarkers() {
      const bounds = new mapboxgl.LngLatBounds();
      let hasMarkers = false;

      events.forEach(event => {
        if (event.longitude && event.latitude) {
          const lngLat = [event.longitude, event.latitude];

          const popup = new mapboxgl.Popup({ offset: 25 }).setHTML(`
            <div class="p-1">
              <strong>${event.name || event.venue_name}</strong>
              <p class="text-sm text-gray-600">${event.venue_name}</p>
              <p class="text-xs text-gray-500">${event.show_time}</p>
              <a href="${event.url}" class="text-xs text-blue-600 hover:underline">View Event</a>
            </div>
          `);

          new mapboxgl.Marker({ color: '#EF4444' })
            .setLngLat(lngLat)
            .setPopup(popup)
            .addTo(map);

          bounds.extend(lngLat);
          hasMarkers = true;
        }
      });

      // If we have event markers, fit the map to show all of them
      if (hasMarkers) {
        map.fitBounds(bounds, { padding: 60, maxZoom: 13, duration: 1500 });
        return;
      }

      // Otherwise, try user's location
      if ('geolocation' in navigator) {
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const userLocation = [position.coords.longitude, position.coords.latitude];
            map.flyTo({
              center: userLocation,
              zoom: 11,
              essential: true,
              duration: 2000
            });
          },
          () => { console.log('Using default location'); },
          { enableHighAccuracy: false, timeout: 5000, maximumAge: 0 }
        );
      }
    }

    map.on('load', () => {
      console.log('Map loaded successfully');
      addEventMarkers();
    });
  });
</script>
